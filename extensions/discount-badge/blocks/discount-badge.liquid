{% comment %}
  Discount Badge App Block
  Automatically displays discount percentage from metafield
  Metafield: custom.discount_percentage
{% endcomment %}

{% assign discount = product.metafields.custom.discount_percentage %}

{% if discount != blank and discount > 0 %}
  <div
    class="discount-badge-wrapper"
    {{ block.shopify_attributes }}
    style="margin-bottom: {{ block.settings.margin_bottom }}px;"
  >
    <div
      class="discount-badge"
      style="
        background: {{ block.settings.bg_gradient_start }};
        {% if block.settings.use_gradient %}
          background: linear-gradient(135deg, {{ block.settings.bg_gradient_start }} 0%, {{ block.settings.bg_gradient_end }} 100%);
        {% endif %}
        color: {{ block.settings.text_color }};
        padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
        border-radius: {{ block.settings.border_radius }}px;
        font-size: {{ block.settings.font_size }}px;
        font-weight: {{ block.settings.font_weight }};
      "
    >
      {% if block.settings.show_icon %}
        <span class="discount-badge__icon" style="font-size: {{ block.settings.icon_size }}px;">
          {{- block.settings.icon_emoji -}}
        </span>
      {% endif %}
      <span class="discount-badge__text">
        {{- block.settings.text_prefix -}}
        {{- discount | round: block.settings.decimal_places -}}
        {{- block.settings.text_suffix -}}
      </span>
    </div>
  </div>

  <style>
    .discount-badge-wrapper {
      display: inline-block;
    }

    .discount-badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
      {% if block.settings.enable_animation %}
        animation: badge-pulse 2s ease-in-out infinite;
      {% endif %}
    }

    {% if block.settings.show_icon and block.settings.enable_animation %}
    .discount-badge__icon {
      animation: badge-bounce 1s ease-in-out infinite;
    }
    {% endif %}

    .discount-badge__text {
      letter-spacing: 0.5px;
    }

    {% if block.settings.enable_animation %}
    @keyframes badge-pulse {
      0%, 100% {
        box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
      }
      50% {
        box-shadow: 0 4px 16px rgba(255, 107, 107, 0.5);
      }
    }

    @keyframes badge-bounce {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-3px);
      }
    }
    {% endif %}

    @media (max-width: 749px) {
      .discount-badge {
        font-size: {{ block.settings.font_size | minus: 2 }}px;
        padding: {{ block.settings.padding_vertical | minus: 2 }}px {{ block.settings.padding_horizontal | minus: 4 }}px;
      }
      {% if block.settings.show_icon %}
      .discount-badge__icon {
        font-size: {{ block.settings.icon_size | minus: 2 }}px;
      }
      {% endif %}
    }
  </style>
{% endif %}

